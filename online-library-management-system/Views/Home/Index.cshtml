<!-- Start: Hero Section -->
<div class="home-hero-section">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="hero-content-v3">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <h2>Explore a World of Knowledge</h2>
                            <p>
                                Discover thousands of Books and CDs across various subjects. Start your journey today with Sydenham Library.
                            </p>
                            <div class="hero-content-btn">
                                <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary">Books & CDs</a>
                                <a asp-controller="Account" asp-action="Signup" class="btn btn-light">Join Now</a>
                            </div>
