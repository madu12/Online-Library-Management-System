@model AuthorAndArtistVM

@{
    var action = Model.NewAuthorAndArtist.Id == 0 ? "Index" : "Edit";
}

<form class="form" asp-action="@action" asp-controller="AuthorAndArtist" asp-area="Admin" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="box-body">
        <div class="form-group">
            <label class="form-label">Name</label>
            <input class="form-control" asp-for="NewAuthorAndArtist.Name" placeholder="Name" />
            <span asp-validation-for="NewAuthorAndArtist.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Type</label>
            <select class="form-control" asp-for="NewAuthorAndArtist.Type">
                <option value="Author">Author</option>
                <option value="Artist">Artist</option>
            </select>
            <span asp-validation-for="NewAuthorAndArtist.Type" class="text-danger"></span>
        </div>
    </div>
    <div class="box-footer text-end">
        <button type="submit" class="btn btn-primary">
            <i class="ti-save-alt"></i> Save
        </button>
        <a asp-area="Admin" asp-action="Index" asp-controller="AuthorAndArtist" role="button" class="btn btn-warning me-1">
            <i class="ti-trash"></i> Cancel
        </a>
    </div>
</form>
